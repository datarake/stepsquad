# StepSquad API - Local Development Environment Variables
# 
# Copy this file to .env.local and update values as needed
#
# Option 1: In-memory storage (dev mode)
# GCP_ENABLED=false
#
# Option 2: Use Firestore (production-like mode)
# GCP_ENABLED=true
# GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
# GOOGLE_CLOUD_PROJECT=stepsquad-46d14
#
# Option 3: Use Firestore with dev auth bypass (hybrid mode)
# GCP_ENABLED=true
# ALLOW_DEV_AUTH_LOCAL=true
# GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
# GOOGLE_CLOUD_PROJECT=stepsquad-46d14

# Google Cloud Platform (GCP) Configuration
# Set to true to use Firestore (production-like mode)
# Set to false to use in-memory storage (dev mode)
GCP_ENABLED=false

# Allow dev auth bypass when using Firestore locally
# Set to true to allow X-Dev-User header even when GCP_ENABLED=true
# Useful for testing Firestore without Firebase tokens
ALLOW_DEV_AUTH_LOCAL=false

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=stepsquad-46d14
GCP_PROJECT_ID=stepsquad-46d14

# Service Account Credentials
# Path to service account JSON key file
# Can use Application Default Credentials (ADC) if not set and gcloud auth is configured
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Timezone Configuration
COMP_TZ=Europe/Bucharest

# Fitbit OAuth Configuration
FITBIT_CLIENT_ID=23THXK
FITBIT_CLIENT_SECRET=3f319445dd6e4824bd2f7f579440cd36
FITBIT_REDIRECT_URI=http://localhost:8080/oauth/fitbit/callback

# Garmin OAuth Configuration (when available)
# GARMIN_CLIENT_ID=
# GARMIN_CLIENT_SECRET=
# GARMIN_REDIRECT_URI=http://localhost:8080/oauth/garmin/callback

# BigQuery Dataset (optional, for analytics)
BQ_DATASET=stepsquad

# Pub/Sub Topic (optional, for event publishing)
PUBSUB_TOPIC_INGEST=steps.ingest

